<!-- Ant build for continuous integration server to auto deploy snapshot -->
<project name="continuous-integration" default="publish">

    <property name="version" value="SNAPSHOT"/>
    <property name="dist.path" value="/home/projects/xstream/dist/distributions"/>
    <property name="jar.path" value="/home/projects/xstream/dist/jars"/>

    <target name="publish">
        <ant dir="." target="all"/>
        <copy file="xstream-${VERSION}.jar" todir="${jar.path}"/>
        <copy file="xstream-${VERSION}.zip" todir="${dist.path}"/>
    </target> 

</project>
